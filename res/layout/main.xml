<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lbVersion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="version" />

    <TextView
        android:id="@+id/lbTitle"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="Ты где на карте?"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/lbLink"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:gravity="right"
        android:text="www.tygdenakarte.ru"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/lbLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Логин"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/txtLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/lbPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пароль"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.81"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lbBeacon"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Телефон"
            android:textAppearance="?android:attr/textAppearanceMedium" android:gravity="center_vertical|center_horizontal"/>

        <TextView
            android:id="@+id/lbBeaconID"
            android:layout_width="182dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.89"
            android:gravity="center_vertical|center_horizontal"
            android:text="[не выбран]"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/btnSelectBeacon"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Выбор" />
    </LinearLayout>

</LinearLayout>